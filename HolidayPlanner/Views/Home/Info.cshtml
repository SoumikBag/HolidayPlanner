
@model HolidayPlanner.Models.Hotel


@{
    ViewBag.Title = "Info";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Info</title>
</head>
<body>
    <div id="container">
        <div class="tempplan plandetail">
            <br />
            <br />
            <div id="displaybar" style="width:100%;background:white; border-top:groove; margin-top:1.1em">
                <div style="width:65em;margin:0 auto; text-align:left">
                    <div class="text" style="">
                        <h1 style="font-size:1.5em;line-height:1.2em;" id="pageresulttitle">

                            @Html.DisplayFor(model=> model.HotelName)
                        </h1>
                        
                    </div>

                </div>
            </div>
          


            <div style="background: white;padding:0 1em 1em 1em;">

                <div style="background: white;line-height: 1.5em;padding-left: 5px;">
                   



                </div>
                <div class="clear"></div>
            </div>

            <script type="text/javascript">
                $(document).ready(function () {
                    $('#tabs').tabs();
                    //$("#tabs").tabs();
                });
            </script>


            <div id="tabs" class="ui-tabs ui-widget ui-widget-content ui-corner-all">
                <ul class="ui-tabs-nav ui-helper-reset ui-helper-clearfix ui-widget-header ui-corner-all" role="tablist">
                    <li class="ui-state-default ui-corner-top ui-tabs-active ui-state-active" role="tab" tabindex="0" aria-controls="tabs-1" aria-labelledby="ui-id-8" aria-selected="true" aria-expanded="true">
                        <a href="@Url.Action("Info", "Home", new { clickinfo = "overview", HId = Model.HotelId })" class="ui-tabs-anchor" role="presentation" tabindex="-1" id="ui-id-8">Overview</a>
                    </li>
                    <li class="ui-state-default ui-corner-top" role="tab" tabindex="-1" aria-controls="tabs-2" aria-labelledby="ui-id-9" aria-selected="false" aria-expanded="false">
                        <a href="@Url.Action("Info", "Home", new { clickinfo = "facility", HId = Model.HotelId })" class="ui-tabs-anchor" role="presentation" tabindex="-1" id="ui-id-9">Info & Facilities</a>
                    </li>


                    <li class="ui-state-default ui-corner-top" role="tab" tabindex="-1" aria-controls="tabs-3" aria-labelledby="ui-id-10" aria-selected="false" aria-expanded="false">
                        <a href="@Url.Action("Info", "Home", new { clickinfo = "Image", HId = Model.HotelId })" class="ui-tabs-anchor" role="presentation" tabindex="-1" id="ui-id-9">Photos</a>
                    </li>


                    <li class="ui-state-default ui-corner-top" role="tab" tabindex="-1" aria-controls="tabs-3" aria-labelledby="ui-id-10" aria-selected="false" aria-expanded="false">
                        <a href="@Url.Action("Info", "Home", new { clickinfo = "Map", HId = Model.HotelId })" class="ui-tabs-anchor" role="presentation" tabindex="-1" id="ui-id-10">Map</a>
                    </li>
                    @*<li class="ui-state-default ui-corner-top" role="tab" tabindex="-1" aria-controls="tabs-3" aria-labelledby="ui-id-10" aria-selected="false" aria-expanded="false">
                        <a href="#tabs-5" class="ui-tabs-anchor" role="presentation" tabindex="-1" id="ui-id-10">Location</a>
                    </li>*@
                    <li class="ui-state-default ui-corner-top" role="tab" tabindex="-1" aria-controls="tabs-3" aria-labelledby="ui-id-10" aria-selected="false" aria-expanded="false">
                        <a href="@Url.Action("Info", "Home", new { clickinfo = "review", HId = Model.HotelId })" class="ui-tabs-anchor" role="presentation" tabindex="-1" id="ui-id-10">Traveller Reviews</a>
                    </li>
                    <li class="ui-state-default ui-corner-top" role="tab" tabindex="-1" aria-controls="tabs-3" aria-labelledby="ui-id-10" aria-selected="false" aria-expanded="false">
                        <a href="@Url.Action("Info", "Home", new { clickinfo = "room", HId = Model.HotelId })" class="ui-tabs-anchor" role="presentation" tabindex="-1" id="ui-id-10">Rooms and Rates</a>
                    </li>

                </ul>

                <div class="sharebarcontainer" style="position:absolute;right:0;top:0.25em;z-index:100;width:6em;padding-right:0.25em; padding-top:20px">
                    <h3>
                        @*@Html.ActionLink("Contact Us", "bookingform", "Home", new { id=Model.HotelId})*@
                        <a href="@Url.Action("bookingform", "Home", new { id= Model.HotelId})">Contact Us</a>
                    </h3>
                </div>
                <div class="" style="position:absolute;right:0;top:0.25em;width:6em;padding-right:6em; padding-top:20px">
                    <h3>
                        <a href="@Url.Action("Review1", "Home", new { id= Model.HotelId})">Add Review</a>
                    </h3>
                </div>

            </div>

        </div>
    </div>
</body>
</html>

